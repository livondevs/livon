html:
  <div>
    <h1>Stopwatch by Lunas</h1>
    <div>${count}</div>
    <button @click="toggle">${interval==null?"Start":"Stop"}</button>
    <button @click="clear">Clear</button>
  </div>
script:
  let count = 0;
  function clear() {
    count = 0;
  }
  function increment() {
    count++;
  }
  function toggle() {
    if (interval) {
      clearInterval(interval);
      interval = null;
    } else {
      interval = setInterval(increment, 2000);
    }
  }
  let interval: number | null = setInterval(increment, 2000);
